NAME = philo
CC = cc
FLAGS = -g -Wall -Werror -Wextra
THREADS = -pthread
BOLD	:= \033[1m
RED		:= \033[31;1m
GREEN	:= \033[32;1m
RESET	:= \033[0m
OBJ = obj/main.o obj/utils.o obj/do.o obj/timer.o
NAME_H = philo.h

all: $(NAME) 

$(NAME): $(OBJ) $(NAME_H) 
	$(CC) $(OBJ) -o $(NAME)
	@echo "$(RED)$(BOLD)Runable philo created.$(RESET)"
		@echo "                                _"
	@echo "                               / \\"
	@echo "                              / .'_"
	@echo "                             / __| \\"
	@echo "             \`.             | / |-' )"
	@echo "           \`.  \\_..._       :  |_,-/"
	@echo "         \`-. \`,'     \`-.   /\`-.__,'"
	@echo "            \`/ __       \\ /     /"
	@echo "            /\`/  \\       :'    /"
	@echo "          _,\\o\\_o/       /    /"
	@echo "         (_) ___.--.    /    /"
	@echo "          \`-. -._.i \\.      :"
	@echo "             \`.\\  ) |:.     |"
	@echo "            ,' |\`-' |:..   / \\"
	@echo "   __     ,'   |    \`.:.      \`."
	@echo "  (_ \`---:     |      \\:.       \\"
	@echo "   ,'     \`. .'\\       \\:.       )"
	@echo " ,' ,'     ,'   \\ o    |:.      /"
	@echo "(_,'  ,7  /      \\\`.__.':..    /,,,"
	@echo "  (_,'(_,'   _gdMbp,,dp,,,,,,dMMMMMbp,,"
	@echo "          ,dMMMMMMMMMMMMMMMMMMMMMMMMMMMb,"
	@echo "       .dMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMb,"
	@echo "     .dMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM,"
	@echo "    ,MMMMMMMMMMMMM\033[30m\033[106;5;7m Philosophers \033[0mMMMMMMMMMMMMMMM"
	@echo "   dMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM."
	@echo " .dMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMb"

obj/%.o: %.c
	@if  [ ! -d obj/ ]; then \
		mkdir -p obj/; \
	fi
	$(CC) $(FLAGS) $(THREADS) -c $< -o $@

clean:
	@echo "$(RED)Cleaning object files...$(RESET)"
	@$(RM) $(OBJ)

fclean: clean
	@echo "$(RED)Cleaning...$(RESET)"
