NAME = philo
BONUS = philo_bonus
CC = cc
FLAGS = -g -Wall -Werror -Wextra
BOLD	:= \033[1m
RED		:= \033[31;1m
GREEN	:= \033[32;1m
RESET	:= \033[0m
OBJ = obj/main.o obj/utils.o
OBJ_BONUS = obj/utils.o obj/bonus.o obj/utils_bonus.o
NAME_H = include/philo.h
NAME_H_BONUS = include/philo_bonus.h

all: $(NAME) 

$(NAME): $(OBJ) $(NAME_H) 
	$(CC) $(OBJ) -o $(NAME)
