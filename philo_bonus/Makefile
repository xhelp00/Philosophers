	@echo "$(RED)$(BOLD)Runable philo created.$(RESET)"

obj/%.o: src/%.c
	$(CC) -g -Wall -Wextra -Werror -c $< -o $@

clean:
	@echo "$(RED)Cleaning object files...$(RESET)"
	@$(RM) $(OBJ) 

fclean: clean
	@echo "$(RED)Cleaning...$(RESET)"
	@echo "⣿⣿⣿⣿⣿⣿⣿⣿⣿⡛⠛⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿"
