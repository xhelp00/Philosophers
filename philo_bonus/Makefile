RED		:= \033[31;1m
GREEN	:= \033[32;1m
RESET	:= \033[0m
OBJ = obj/main.o obj/utils.o
NAME_H = philo_bonus.h

all: $(NAME) 

$(NAME): $(OBJ) $(NAME_H) 
	$(CC) $(OBJ) -o $(NAME)
